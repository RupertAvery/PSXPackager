<UserControl x:Class="PSXPackagerGUI.Controls.ResourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSXPackagerGUI.Controls"
             xmlns:models="clr-namespace:PSXPackagerGUI.Models"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance models:ResourceModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="200" d:DesignWidth="400">
    <Grid Margin="0,0,0,0" DataContext="{Binding Resource, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Content="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}"></Label>

        <Rectangle Grid.Row="1" Grid.Column="1" Fill="#15000060" AllowDrop="True" Drop="UIElement_OnDrop"></Rectangle>

        <Border Grid.Row="1" Grid.Column="0"  BorderBrush="#60000000" BorderThickness="0.2">
            <Image VerticalAlignment="Center" Source="{Binding Icon}" AllowDrop="True" Drop="UIElement_OnDrop"></Image>
        </Border>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" x:Name="MoreButton" IsEnabled="{Binding IsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}" Click="More_OnClick">...</Button>
            <Button Grid.Row="1" x:Name="RemoveButton" IsEnabled="{Binding IsRemoveEnabled}" Click="Remove_OnClick">x</Button>
        </Grid>

    </Grid>
</UserControl>
