<UserControl x:Class="PSXPackagerGUI.Controls.ResourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSXPackagerGUI.Controls"
             xmlns:converters="clr-namespace:PSXPackagerGUI.Converters"
             xmlns:resource="clr-namespace:PSXPackagerGUI.Models.Resource"
             xmlns:popstation="clr-namespace:Popstation.Pbp;assembly=Popstation"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance resource:ResourceModel, IsDesignTimeCreatable=True}"
             AllowDrop="True"
             d:DesignHeight="200" d:DesignWidth="400">
    <UserControl.Resources>
        <converters:BooleanVisibilityConverter x:Key="BooleanVisibilityConverter"></converters:BooleanVisibilityConverter>

        <DataTemplate x:Key="ImageTemplate" DataType="{x:Type resource:ResourceModel}">
            <local:ImageEditorControl Composite="{Binding Composite}" ResourceType="{Binding ResourceType}"></local:ImageEditorControl>
        </DataTemplate>

        <DataTemplate x:Key="SoundTemplate" DataType="{x:Type resource:ResourceModel}">
        </DataTemplate>

        <DataTemplate x:Key="AnimationTemplate" DataType="{x:Type resource:ResourceModel}">
        </DataTemplate>

    </UserControl.Resources>
    <Grid DataContext="{Binding Resource, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}">
        <Grid Background="{x:Static SystemColors.ControlDarkBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="1" Grid.Column="1" Foreground="White" FontSize="20" HorizontalContentAlignment="Center">
                <Label.Effect>
                    <DropShadowEffect BlurRadius="4" ShadowDepth="2"></DropShadowEffect>
                </Label.Effect>
                Not Included
            </Label>
        </Grid>
        <Grid Visibility="{Binding IsIncluded, Converter={StaticResource BooleanVisibilityConverter}}">
            <ContentControl Content="{Binding Path=.}">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="ContentTemplate" Value="{StaticResource ImageTemplate}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static popstation:ResourceType.ICON0}">
                                <Setter Property="ContentTemplate" Value="{StaticResource ImageTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static popstation:ResourceType.PIC1}">
                                <Setter Property="ContentTemplate" Value="{StaticResource ImageTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static popstation:ResourceType.PIC0}">
                                <Setter Property="ContentTemplate" Value="{StaticResource ImageTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static popstation:ResourceType.BOOT}">
                                <Setter Property="ContentTemplate" Value="{StaticResource ImageTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static popstation:ResourceType.SND0}">
                                <Setter Property="ContentTemplate" Value="{StaticResource SoundTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="{x:Static popstation:ResourceType.ICON1}">
                                <Setter Property="ContentTemplate" Value="{StaticResource AnimationTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
</UserControl>
