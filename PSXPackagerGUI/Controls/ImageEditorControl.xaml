<UserControl x:Class="PSXPackagerGUI.Controls.ImageEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PSXPackagerGUI.Controls"
             xmlns:resource="clr-namespace:PSXPackagerGUI.Models.Resource"
             xmlns:converters="clr-namespace:PSXPackagerGUI.Converters"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:ReferenceEqualsConverter x:Key="ReferenceEqualsConverter"></converters:ReferenceEqualsConverter>
        <converters:NotNullVisibilityConverter x:Key="NotNullVisibilityConverter"></converters:NotNullVisibilityConverter>
        <converters:ImageResourceTypeVisibilityConverter x:Key="VisibilityConverter"></converters:ImageResourceTypeVisibilityConverter>
        <converters:ValueEqualsVisibilityConverter x:Key="ValueEqualsVisibilityConverter"></converters:ValueEqualsVisibilityConverter>

        <DataTemplate x:Key="ImageLayerTemplate" DataType="{x:Type resource:ImageLayer}">
            <Image Height="50" Source="{Binding Bitmap}"></Image>
        </DataTemplate>

        <DataTemplate x:Key="TextLayerTemplate" DataType="{x:Type resource:TextLayer}">
            <TextBlock Height="50" 
                       FontSize="35" 
                       FontFamily="Times New Roman" 
                       TextAlignment="Center" 
                       Padding="5,5,5,5"
                       Foreground="White">
                T
            </TextBlock>
        </DataTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid Background="{x:Static SystemColors.ControlLightBrush}" Margin="0,0,0,0" DataContext="{Binding Composite, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}">

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <ToolBar>
                <Menu>
                    <MenuItem Header="_File">
                        <MenuItem Header="Load Image" Click="Load_Click">
                        </MenuItem>
                        <MenuItem Header="Save As" Click="SaveAs_Click">
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Load Template" Click="LoadTemplate_Click">
                        </MenuItem>
                        <MenuItem Header="Save As Template" Click="SaveAsTemplate_Click">
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Clear">
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Edit">
                        <MenuItem Header="Undo" InputGestureText="Ctrl+Z" Click="Undo_Click" IsEnabled="{Binding CanUndo}">
                        </MenuItem>
                        <MenuItem Header="Redo" InputGestureText="Ctrl+Y" Click="Redo_Click" IsEnabled="{Binding CanRedo}">
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="_Layer">
                        <MenuItem Header="Insert Image" Click="InsertImageLayer_OnClick">
                        </MenuItem>
                        <MenuItem Header="Insert Text" Click="InsertTextLayer_OnClick">
                        </MenuItem>
                        <MenuItem Header="Reset" Click="ResetLayer_OnClick" IsEnabled="{Binding HasLayers}">
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Clear Layers" Click="ClearLayers_OnClick" IsEnabled="{Binding HasLayers}">
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </ToolBar>

            <Grid Grid.Row="1" Grid.Column="0" Visibility="{Binding SelectedLayer, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}, Converter={StaticResource NotNullVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" DataContext="{Binding SelectedLayer, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}">
                    <Label VerticalContentAlignment="Center">Layer</Label>
                    <Label Margin="10,0,0,0"  VerticalContentAlignment="Center">X:</Label>
                    <TextBox Height="24" Width="30" TextAlignment="Center" VerticalContentAlignment="Center" Text="{Binding OffsetX, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" KeyUp="Redraw" GotFocus="UIElement_OnGotFocus" LostFocus="UIElement_OnLostFocus"></TextBox>
                    <Label VerticalContentAlignment="Center">Y:</Label>
                    <TextBox Height="24" Width="30" TextAlignment="Center" VerticalContentAlignment="Center" Text="{Binding OffsetY, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" KeyUp="Redraw" GotFocus="UIElement_OnGotFocus" LostFocus="UIElement_OnLostFocus"></TextBox>
                    <Label VerticalContentAlignment="Center">Width:</Label>
                    <TextBox Height="24" Width="30" TextAlignment="Center" VerticalContentAlignment="Center" Text="{Binding Width, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" KeyUp="Redraw" GotFocus="UIElement_OnGotFocus" LostFocus="UIElement_OnLostFocus"></TextBox>
                    <Label VerticalContentAlignment="Center">Height:</Label>
                    <TextBox Height="24" Width="30" TextAlignment="Center" VerticalContentAlignment="Center" Text="{Binding Height, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" KeyUp="Redraw" GotFocus="UIElement_OnGotFocus" LostFocus="UIElement_OnLostFocus"></TextBox>
                </StackPanel>
            </Grid>

            <Grid x:Name="Grid" Tag="{Binding SelectedLayer, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}" 
                  Background="#808080"
                  Grid.Row="2" 
                  Grid.Column="0" 
                  Focusable="True"
                  MouseDown="UIElement_OnMouseDown" 
                  MouseMove="UIElement_OnMouseMove" 
                  MouseUp="UIElement_OnMouseUp"
                  KeyDown="Grid_OnKeyDown"
                  >
              
                <Grid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Fit to bounds" Click="FitBounds_Click"></MenuItem>
                        <MenuItem Header="Fit to width" Click="FitWidth_Click"></MenuItem>
                        <MenuItem Header="Fit to height" Click="FitHeight_Click"></MenuItem>
                        <Separator></Separator>
                        <MenuItem Header="Insert image layer" Click="InsertImageLayer_OnClick"></MenuItem>
                        <MenuItem Header="Insert text layer" Click="InsertTextLayer_OnClick"></MenuItem>
                        <MenuItem Header="Remove layer" Click="RemoveLayer_OnClick"></MenuItem>
                        <Separator></Separator>
                        <MenuItem Header="Move up" Click="MoveLayerUp_OnClick"></MenuItem>
                        <MenuItem Header="Move down" Click="MoveLayerDown_OnClick"></MenuItem>
                        <Separator></Separator>
                        <MenuItem Header="Reset layer" Click="ResetLayer_OnClick"></MenuItem>
                    </ContextMenu>
                </Grid.ContextMenu>
                <Border Width="{Binding Width}" Height="{Binding Height}" BorderThickness="1" BorderBrush="#808080">
                    <Border.Background>
                        <DrawingBrush TileMode="Tile"
                                      Viewport="0,0,16,16"
                                      ViewportUnits="Absolute">
                            <DrawingBrush.Drawing>
                                <DrawingGroup>
                                    <GeometryDrawing Brush="#FFFFFFFF"
                                                     Geometry="M0,0 H16 V16 H0 Z"/>
                                    <GeometryDrawing Brush="#FFCCCCCC"
                                                     Geometry="M0,0 H8 V8 H0 Z"/>
                                    <GeometryDrawing Brush="#FFCCCCCC"
                                                     Geometry="M8,8 H16 V16 H8 Z"/>
                                </DrawingGroup>
                            </DrawingBrush.Drawing>
                        </DrawingBrush>
                    </Border.Background>
                    <Image Stretch="None" VerticalAlignment="Center" Source="{Binding CompositeBitmap}" AllowDrop="True"></Image>
                </Border>
                <Canvas DataContext="{Binding Selection, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=1}}"
                    Visibility="{Binding Visibility}"
                    ClipToBounds="True"
                    IsHitTestVisible="False"
            >
                    <Line X1="{Binding E1.X}" Y1="{Binding E1.Y}" X2="{Binding E2.X}" Y2="{Binding E2.Y}" Stroke="#70A0FF"></Line>
                    <Line X1="{Binding E2.X}" Y1="{Binding E2.Y}" X2="{Binding E3.X}" Y2="{Binding E3.Y}" Stroke="#70A0FF"></Line>
                    <Line X1="{Binding E3.X}" Y1="{Binding E3.Y}" X2="{Binding E4.X}" Y2="{Binding E4.Y}" Stroke="#70A0FF"></Line>
                    <Line X1="{Binding E4.X}" Y1="{Binding E4.Y}" X2="{Binding E1.X}" Y2="{Binding E1.Y}" Stroke="#70A0FF"></Line>
                    <!--<Rectangle  
                    Canvas.Left="{Binding C1.X}" 
                    Canvas.Top="{Binding C1.Y}"
                    Width="5" Height="5" Fill="White" Stroke="#70A0FF">
                    </Rectangle>
                    <Rectangle 
                    Canvas.Left="{Binding C2.X}" 
                    Canvas.Top="{Binding C2.Y}"
                    Width="5" Height="5" Fill="White" Stroke="#70A0FF">
                    </Rectangle>-->
                    <Rectangle 
                    Canvas.Left="{Binding C3.X}" 
                    Canvas.Top="{Binding C3.Y}"
                    Width="5" Height="5" Fill="White" Stroke="#70A0FF">
                    </Rectangle>
                    <!--<Rectangle 
                    Canvas.Left="{Binding C4.X}" 
                    Canvas.Top="{Binding C4.Y}"
                    Width="5" Height="5" Fill="White" Stroke="#70A0FF">
                    </Rectangle>-->
                </Canvas>
            </Grid>

            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Border Tag="{Binding .}" BorderBrush="#C0C0C0" BorderThickness="1" Width="100" Grid.Column="1">
                    <Border.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add Image Layer" Click="InsertImageLayer_OnClick"></MenuItem>
                            <MenuItem Header="Add Text Layer" Click="InsertTextLayer_OnClick"></MenuItem>
                        </ContextMenu>
                    </Border.ContextMenu>
                    <ScrollViewer Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding ReverseLayers}" VerticalAlignment="Top">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Tag="{Binding .}" BorderBrush="#C0C0C0" BorderThickness="1" IsHitTestVisible="True" MouseDown="Layer_OnMouseDown">
                                        <Border.ContextMenu>
                                            <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}" >
                                                <MenuItem Header="Edit Text" Click="EditText_OnClick" Visibility="{Binding LayerType, Converter={StaticResource ValueEqualsVisibilityConverter}, ConverterParameter={x:Static resource:LayerType.Text}}"></MenuItem>
                                                <MenuItem Header="Insert Image Layer" Click="InsertImageLayer_OnClick"></MenuItem>
                                                <MenuItem Header="Insert Text Layer" Click="InsertTextLayer_OnClick"></MenuItem>
                                                <MenuItem Header="Remove Layer" Click="RemoveLayer_OnClick"></MenuItem>
                                                <Separator></Separator>
                                                <MenuItem Header="Move up" Click="MoveLayerUp_OnClick" IsEnabled="{Binding CanMoveUp}"></MenuItem>
                                                <MenuItem Header="Move down" Click="MoveLayerDown_OnClick" IsEnabled="{Binding CanMoveDown}"></MenuItem>
                                                <Separator></Separator>
                                                <MenuItem Header="Reset Layer" Click="ResetLayer_OnClick"></MenuItem>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Value="True">
                                                        <DataTrigger.Binding>
                                                            <MultiBinding Converter="{StaticResource ReferenceEqualsConverter}">
                                                                <Binding />
                                                                <Binding Path="SelectedLayer" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                            </MultiBinding>
                                                        </DataTrigger.Binding>
                                                        <Setter Property="Background" Value="#80000000"></Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                                <Setter Property="Background" Value="Transparent"></Setter>
                                            </Style>
                                        </Border.Style>
                                        <ContentControl Content="{Binding Path=.}">
                                            <ContentControl.Style>
                                                <Style TargetType="ContentControl">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource ImageLayerTemplate}" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding LayerType}" Value="{x:Static resource:LayerType.Image}">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource ImageLayerTemplate}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding LayerType}" Value="{x:Static resource:LayerType.Text}">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource TextLayerTemplate}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
