<Page x:Class="PSXPackagerGUI.Pages.SinglePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PSXPackagerGUI.Pages" 
      xmlns:converters="clr-namespace:PSXPackagerGUI.Converters"
      xmlns:controls="clr-namespace:PSXPackagerGUI.Controls"
      xmlns:models="clr-namespace:PSXPackagerGUI.Models"
      xmlns:shaders="clr-namespace:PSXPackagerGUI.Shaders"
      xmlns:resources="clr-namespace:PSXPackagerGUI.Models.Resource"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance models:SingleModelDesignTime, IsDesignTimeCreatable=True}"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
      Title="Single">
    <Page.Resources>
        <converters:IsEmptyBrushConverter x:Key="IsEmptyBrushConverter"></converters:IsEmptyBrushConverter>
        <converters:NotConverter x:Key="NotConverter"></converters:NotConverter>
        <converters:IsoInformationConverter x:Key="IsoInformationConverter"></converters:IsoInformationConverter>
        <converters:BooleanVisibilityConverter x:Key="VisibilityConverter"></converters:BooleanVisibilityConverter>
        <ContextMenu x:Key="DiscButtonContextMenu">
            <MenuItem Header="Load Disc Image" x:Name="LoadISO" Click="LoadISO_OnClick" />
            <MenuItem Header="Save As..." x:Name="SaveImage" Click="SaveImage_OnClick" />
        </ContextMenu>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Discs">
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="185"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="1" x:Name="TitleColumnWidth"/>
                    </Grid>
                    <ListView Grid.Row="0" ItemsSource="{Binding Discs}" SelectedItem="{Binding SelectedDisc}"  
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        Grid.Column="0" Height="185" VerticalAlignment="Top">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <controls:AutoDisableImage Grid.Column="0" Height="32" Width="32"  IsEnabled="{Binding IsEmpty, Converter={StaticResource NotConverter}}">
                                        <Image.Source>
                                            <BitmapImage  UriSource="../Resources/disc.png"/>
                                        </Image.Source>
                                    </controls:AutoDisableImage>
                                    <TextBlock TextTrimming="CharacterEllipsis"
                                               Width="{Binding ElementName=TitleColumnWidth, Path=ActualWidth}" VerticalAlignment="Center" Grid.Column="1" 
                                               Foreground="{Binding IsEmpty, Converter={StaticResource IsEmptyBrushConverter}}"
                                               Text="{Binding ., Converter={StaticResource IsoInformationConverter}}"
                                               >
                                    </TextBlock>
                                    <Button Grid.Column="2" x:Name="DiscButton" Click="DiscButton_OnClick" IsEnabled="{Binding IsLoadEnabled}">...</Button>
                                    <Button Grid.Column="3" Command="{Binding RemoveCommand}" IsEnabled="{Binding IsRemoveEnabled}">x</Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TabControl Grid.Row="1" Margin="0,5,0,0">
                        <TabItem Header="Disc Metadata">
                            <Grid Margin="5,5,5,5" VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" >Game ID (per disc)</Label>
                                <Label Grid.Column="0" Grid.Row="1" >Game Title (per disc)</Label>
                                <Label Grid.Column="0" Grid.Row="2" >Save ID (main)</Label>
                                <Label Grid.Column="0" Grid.Row="3" >Save Title (main)</Label>
                                <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="0" Text="{Binding SelectedDisc.GameID}" MaxLength="9"></TextBox>
                                <Button Grid.Column="2" Click="SelectGameID_Click" ToolTip="Select Game ID/Title">...</Button>
                                <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="1" Text="{Binding SelectedDisc.Title}"  MaxLength="128"></TextBox>
                                <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="2" Text="{Binding SaveID, UpdateSourceTrigger=PropertyChanged}" MaxLength="9"></TextBox>
                                <Button Grid.Column="2" Grid.Row="2" Click="SelectSaveID_Click" ToolTip="Select Save ID/Title">...</Button>
                                <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="3" Text="{Binding SaveTitle, UpdateSourceTrigger=PropertyChanged}" MaxLength="128"></TextBox>

                                <!--<StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                                    <Button Padding="10,5,10,5">Reset disc Game ID/Title</Button>
                                    <Button Padding="10,5,10,5" Margin="5,0,0,0">Reset all Game ID/Title</Button>
                                    <Button Padding="10,5,10,5" Margin="5,0,0,0">Reset Save ID/Title</Button>
                                </StackPanel>-->
                                <ScrollViewer  Margin="5,20,0,0" Grid.Row="5" Grid.ColumnSpan="3" >
                                    <TextBlock TextWrapping="WrapWithOverflow" Padding="5">
                                        These settings primarily affect the PSP.
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Bold>Game ID</Bold> - Used by POPS for game compatibility. Only change if the game has issues running on a real PSP.
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Bold>Game Title</Bold> - The title of the disc. Does not affect compatibility
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Bold>Save ID</Bold> - Used to determine which folder will be used for the save game. Only change if you know what you are doing (i.e. sharing memory cards between games). Sets the DISC_ID key in PARAM.SFO
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Bold>Save Title</Bold> - The title displayed on the save game manager. Change as desired. Sets the TITLE key in PARAM.SFO
                                        <LineBreak/>
                                        <LineBreak/>
                                    </TextBlock>
                                </ScrollViewer>
                               
                            </Grid>
                        </TabItem>
                        <TabItem Header="Tracks">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0">Track #</Label>
                                <Label Grid.Column="1">Type</Label>
                                <ListView Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding SelectedDisc.Tracks}" SelectedItem="{Binding SelectedTrack}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListViewItem}">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                            <EventSetter Event="MouseDoubleClick" Handler="Track_OnMouseDoubleClick"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Tag" Value="Hovered"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="24"/>
                                                </Grid.ColumnDefinitions>
                                                <Label Content="{Binding Number}"></Label>
                                                <Label Grid.Column="1" Content="{Binding DataType}"></Label>
                                                <Grid Grid.Column="2">
                                                    <Image Width="24" Height="24" MouseDown="PlayControls_OnMouseDown">
                                                        <Image.Style>
                                                            <Style TargetType="Image">
                                                                <Setter Property="Visibility" Value="Hidden"></Setter>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=Tag}"
                                                                            Value="Hovered">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>

                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="true">
                                                                        <Setter Property="Visibility" Value="Visible"></Setter>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:TrackStatus.Stopped}">
                                                                        <Setter Property="Source" Value="../Resources/play-24x24.png"></Setter>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:TrackStatus.Playing}">
                                                                        <Setter Property="Source" Value="../Resources/pause-24x24.png"></Setter>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Image.Style>
                                                    </Image>
                                                </Grid>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>

                        </TabItem>
                    </TabControl>
                </Grid>

            </GroupBox>

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                ShowsPreview="True"
            />
            <TabControl  Grid.Column="2">
                <TabItem Header="Resources">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" Margin="0,5,0,5"  Focusable="False"
                                      KeyboardNavigation.DirectionalNavigation="None"
                                      KeyboardNavigation.TabNavigation="None">
                            <Grid Margin="0,0,10,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Label>Checked resources will be included in the PBP</Label>
                                <TabControl Grid.Row="1" x:Name="ResourceTabs" SelectionChanged="Selector_OnSelectionChanged">
                                    <TabItem Tag="ICON0">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                <CheckBox IsChecked="{Binding Icon0.IsIncluded}" IsEnabled="False" VerticalContentAlignment="Center"></CheckBox>
                                                <Label VerticalContentAlignment="Center">Icon</Label>
                                            </StackPanel>
                                        </TabItem.Header>
                                    </TabItem>
                                    <TabItem Tag="PIC1">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding Pic1.IsIncluded}" VerticalContentAlignment="Center"></CheckBox>
                                                <Label VerticalContentAlignment="Center">Background</Label>
                                            </StackPanel>
                                        </TabItem.Header>
                                    </TabItem>
                                    <TabItem Tag="PIC0">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding Pic0.IsIncluded}" VerticalContentAlignment="Center"></CheckBox>
                                                <Label VerticalContentAlignment="Center">Information</Label>
                                            </StackPanel>
                                        </TabItem.Header>
                                    </TabItem>
                                    <TabItem Tag="BOOT">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding Boot.IsIncluded}" VerticalContentAlignment="Center"></CheckBox>
                                                <Label VerticalContentAlignment="Center">Boot</Label>
                                            </StackPanel>
                                        </TabItem.Header>
                                    </TabItem>
                                    <TabItem Tag="SND0">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding Snd0.IsIncluded}" VerticalContentAlignment="Center"></CheckBox>
                                                <Label VerticalContentAlignment="Center">Music</Label>
                                            </StackPanel>
                                        </TabItem.Header>
                                    </TabItem>
                                    <TabItem Tag="ICON1">
                                        <TabItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox IsChecked="{Binding Icon1.IsIncluded}" VerticalContentAlignment="Center"></CheckBox>
                                                <Label VerticalContentAlignment="Center">Animation</Label>
                                            </StackPanel>
                                        </TabItem.Header>
                                    </TabItem>
                                </TabControl>

                                <Grid Grid.Row="2">
                                    <controls:ResourceControl Margin="5,5,0,0" AllowDrop="True" Resource="{Binding CurrentResource, Mode=OneWay}"></controls:ResourceControl>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                </TabItem>
                <TabItem Header="Preview">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Label>Show/Hide</Label>
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding ShowBackground}">Background</CheckBox>
                                <CheckBox VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="{Binding ShowInformation}">Information</CheckBox>
                                <CheckBox VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="{Binding ShowIcon}">Icon</CheckBox>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
                            <Image Source="Pack://Application:,,,/Resources/Editor/back.png" Width="480" Height="272" Stretch="Fill" >
                                <Image.Effect>
                                    <shaders:WavesEffect x:Name="WavesEffect"/>
                                </Image.Effect>
                            </Image>
                            <Image Tag="{Binding Pic1}" AllowDrop="True" Drop="Pic1_OnDrop" Source="{Binding Pic1.Icon}" Width="480" Height="272">
                                <Image.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Load Background" Click="LoadResource_OnClick"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsRemoveEnabled}" Header="Clear Background" Click="Resource_OnRemove"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsSaveAsEnabled}" Header="Save Background As..." Click="SaveResource_OnClick"></MenuItem>
                                    </ContextMenu>
                                </Image.ContextMenu>

                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Visibility" Value="Hidden"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Pic1.IsIncluded}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ShowBackground}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             To="1"
                                                                             Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             To="0"
                                                                             Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <Image Tag="{Binding Pic0}" AllowDrop="True" Drop="Pic0_OnDrop" Source="{Binding Pic0.Icon}" Width="310" Height="180" Margin="160,84,0,0">
                                <Image.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Load Information" Click="LoadResource_OnClick"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsRemoveEnabled}" Header="Clear Information" Click="Resource_OnRemove"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsSaveAsEnabled}" Header="Save Information As..." Click="SaveResource_OnClick"></MenuItem>
                                    </ContextMenu>
                                </Image.ContextMenu>
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Visibility" Value="Hidden"></Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Pic0.IsIncluded}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"></Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ShowInformation}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             To="1"
                                                                             Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             To="0"
                                                                             Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <Border Tag="{Binding Icon0}" AllowDrop="True" Drop="Icon0_OnDrop" CornerRadius="8" Height="80" Width="80" Margin="-280,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="1" Opacity="1"/>
                                </Border.Effect>
                                <Border.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Load Icon" Click="LoadResource_OnClick"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsRemoveEnabled}" Header="Clear Icon" Click="Resource_OnRemove"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsSaveAsEnabled}" Header="Save Icon As..." Click="SaveResource_OnClick"></MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Image Source="{Binding Icon0.Icon}" Height="80" Width="80">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Visibility" Value="Hidden"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Icon0.IsIncluded}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ShowIcon}" Value="True">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                        To="1"
                                                                        Duration="0:0:0.5"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                        To="0"
                                                                        Duration="0:0:0.5"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </Border>
                            <TextBlock FontFamily="{x:Static resources:FontManager.NewRodinProDBFontFamily}" FontSize="12" FontWeight="Bold" Foreground="White"
                                       Text="{Binding CurrentTime}"
                                       TextAlignment="Right"
                                       Width="125" Height="20" Margin="270,0,0,250">
                                <TextBlock.Effect>
                                    <DropShadowEffect BlurRadius="5" ShadowDepth="2"></DropShadowEffect>
                                </TextBlock.Effect>
                            </TextBlock>
                            <Image Source="/Resources/battery.png" Height="20" Width="30" Margin="440,0,0,243">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="2" ShadowDepth="1"></DropShadowEffect>
                                </Image.Effect>
                            </Image>
                        </Grid>
                        <Grid Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                            <Label>Drag and drop images onto the resource areas to load into the resource. Right-click to show context menu.</Label>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="PARAM.SFO">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" >
                            <ItemsControl ItemsSource="{Binding SFOEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="35">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding Key}"></TextBlock>
                                            <TextBox IsEnabled="{Binding IsEditable}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="5,5,5,5" Text="{Binding Value}"></TextBox>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <Button Grid.Row="1" Click="ResetSFO_Click">Reset</Button>
                    </Grid>
                </TabItem>
            </TabControl>


        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Maximum="{Binding MaxProgress}" Value="{Binding Progress}" Margin="2,5,5,5"></ProgressBar>
            <Label Content="{Binding Status}"  Margin="2,2,2,2"></Label>
            <Button Grid.Column="1" Click="Cancel_Click">Cancel</Button>
        </Grid>
    </Grid>
</Page>
