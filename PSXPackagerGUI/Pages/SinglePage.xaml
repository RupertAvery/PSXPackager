<Page x:Class="PSXPackagerGUI.Pages.SinglePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PSXPackagerGUI.Pages" 
      xmlns:converters="clr-namespace:PSXPackagerGUI.Converters"
      xmlns:controls="clr-namespace:PSXPackagerGUI.Controls"
      xmlns:models="clr-namespace:PSXPackagerGUI.Models"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance models:SingleModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
      Title="Single">
    <Page.Resources>
        <converters:IsEmptyBrushConverter x:Key="IsEmptyBrushConverter"></converters:IsEmptyBrushConverter>
        <converters:NotConverter x:Key="NotConverter"></converters:NotConverter>
        <converters:IsoInformationConverter x:Key="IsoInformationConverter"></converters:IsoInformationConverter>
        <converters:BooleanVisibilityConverter x:Key="VisibilityConverter"></converters:BooleanVisibilityConverter>
        <ContextMenu x:Key="DiscButtonContextMenu">
            <MenuItem Header="Load ISO" x:Name="LoadISO" Click="LoadISO_OnClick" />
            <MenuItem Header="Save As..." x:Name="SaveImage" Click="SaveImage_OnClick" />
        </ContextMenu>
        <ContextMenu x:Key="ResourceButtonContextMenu">
            <MenuItem Header="Load Resource" x:Name="LoadResource" Click="LoadResource_OnClick" />
            <MenuItem Header="Revert to Default" x:Name="ResetResource" Click="ResetResource_OnClick" />
            <MenuItem Header="Save As..." x:Name="SaveResource" Click="SaveResource_OnClick" />
        </ContextMenu>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Discs">
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="185"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="1" x:Name="TitleColumnWidth"/>
                    </Grid>
                    <ListView Grid.Row="0" ItemsSource="{Binding Discs}" SelectedItem="{Binding SelectedDisc}"  
                        ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                        Grid.Column="0" Height="185" VerticalAlignment="Top">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="32"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <controls:AutoDisableImage Grid.Column="0" Height="32" Width="32"  IsEnabled="{Binding IsEmpty, Converter={StaticResource NotConverter}}">
                                        <Image.Source>
                                            <BitmapImage  UriSource="../Resources/disc.png"/>
                                        </Image.Source>
                                    </controls:AutoDisableImage>
                                    <TextBlock TextTrimming="CharacterEllipsis"
                                               Width="{Binding ElementName=TitleColumnWidth, Path=ActualWidth}" VerticalAlignment="Center" Grid.Column="1" 
                                               Foreground="{Binding IsEmpty, Converter={StaticResource IsEmptyBrushConverter}}">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource IsoInformationConverter}">
                                                <Binding Path="Title"></Binding>
                                                <Binding Path="Size"></Binding>
                                            </MultiBinding>

                                        </TextBlock.Text>

                                    </TextBlock>
                                    <Button Grid.Column="2" x:Name="DiscButton" Click="DiscButton_OnClick" IsEnabled="{Binding IsLoadEnabled}">...</Button>
                                    <Button Grid.Column="3" Command="{Binding RemoveCommand}" IsEnabled="{Binding IsRemoveEnabled}">x</Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <GroupBox Grid.Row="1" Header="Disc Metadata">
                        <Grid Margin="5,5,5,5" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" >Game ID</Label>
                            <Label Grid.Column="0" Grid.Row="1" >Game Title</Label>
                            <Label Grid.Column="0" Grid.Row="2" >Save ID</Label>
                            <Label Grid.Column="0" Grid.Row="3" >Save Title</Label>
                            <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="0" Text="{Binding SelectedDisc.GameID}" MaxLength="9"></TextBox>
                            <Button Grid.Column="2" Click="SelectGameID_Click">...</Button>
                            <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="1" Text="{Binding SelectedDisc.Title}" MaxLength="128"></TextBox>
                            <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="2" Text="{Binding SelectedDisc.SaveID}" MaxLength="9"></TextBox>
                            <TextBox Grid.Column="1" VerticalContentAlignment="Center" Grid.Row="3" Text="{Binding SelectedDisc.SaveTitle}" MaxLength="128"></TextBox>

                        </Grid>
                    </GroupBox>
                </Grid>

            </GroupBox>

            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                ShowsPreview="True"
            />
            <TabControl  Grid.Column="2">
                <TabItem Header="Resources">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" Margin="0,5,0,5"  Focusable="False"
                                      KeyboardNavigation.DirectionalNavigation="None"
                                      KeyboardNavigation.TabNavigation="None">
                            <Grid Margin="0,0,10,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="360"/>
                                    <RowDefinition Height="300"/>
                                    <RowDefinition Height="360"/>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="200"/>
                                </Grid.RowDefinitions>

                                <CheckBox Grid.Row="0" VerticalAlignment="Center" IsChecked="{Binding Settings.GenerateIconFrame}">Generate Icon Frame</CheckBox>
                                <controls:ResourceControl AllowDrop="True" Resource="{Binding Icon0}" Grid.Row="1" Text="Icon Image (ICON0.PNG) 80x80" Drop="Icon0_OnDrop" More="Resource_OnMore" Remove="Resource_OnRemove"></controls:ResourceControl>
                                <controls:ResourceControl AllowDrop="True" Resource="{Binding Pic1}" Grid.Row="2" Text="Background Image (PIC1.PNG) 480x272"  Drop="Pic1_OnDrop" More="Resource_OnMore" Remove="Resource_OnRemove"></controls:ResourceControl>
                                <controls:ResourceControl AllowDrop="True" Resource="{Binding Pic0}" Grid.Row="3" Text="Information Overlay (PIC0.PNG) 310x180" Drop="Pic0_OnDrop" More="Resource_OnMore" Remove="Resource_OnRemove"></controls:ResourceControl>
                                <controls:ResourceControl AllowDrop="True" Resource="{Binding Boot}" Grid.Row="4" Text="Boot Image (BOOT.PNG) 480x272" Drop="Boot_OnDrop" More="Resource_OnMore" Remove="Resource_OnRemove"></controls:ResourceControl>
                                <controls:ResourceControl AllowDrop="True" Resource="{Binding Snd0}" Grid.Row="5" Text="Background Music (SND0.AT3)" Drop="Snd0_OnDrop" More="Resource_OnMore" Remove="Resource_OnRemove"></controls:ResourceControl>
                                <controls:ResourceControl AllowDrop="True" Resource="{Binding Icon1}" Grid.Row="6" Text="Animated Icon (ICON1.PMF)"  Drop="Icon1_OnDrop" More="Resource_OnMore" Remove="Resource_OnRemove"></controls:ResourceControl>

                            </Grid>
                        </ScrollViewer>
                        <Grid  Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                            <Label>Drag and drop images onto the resource areas to load into the resource</Label>
                        </Grid>
                    </Grid>

                </TabItem>
                <TabItem Header="Preview">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Label>Show/Hide</Label>
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding ShowBackground}">Background</CheckBox>
                                <CheckBox VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="{Binding ShowInformation}">Information</CheckBox>
                                <CheckBox VerticalAlignment="Center" Margin="15,0,0,0" IsChecked="{Binding ShowIcon}">Icon</CheckBox>
                            </StackPanel>
                        </Grid>
                        <Grid Grid.Row="1" Background="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}">
                            <Image Source="Pack://Application:,,,/Resources/Editor/back.png" Width="480" Height="272" ></Image>
                            <Image Tag="{Binding Pic1}" AllowDrop="True" Drop="Pic1_OnDrop" Visibility="{Binding ShowBackground, Converter={StaticResource VisibilityConverter}}" Source="{Binding Pic1.Icon}" Width="480" Height="272">
                                <Image.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Load Background" Click="LoadResource_OnClick"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsRemoveEnabled}" Header="Clear Background" Click="Resource_OnRemove"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsSaveAsEnabled}" Header="Save Background As..." Click="SaveResource_OnClick"></MenuItem>
                                    </ContextMenu>
                                </Image.ContextMenu>
                            </Image>
                            <Image Tag="{Binding Pic0}" AllowDrop="True" Drop="Pic0_OnDrop" Visibility="{Binding ShowInformation, Converter={StaticResource VisibilityConverter}}" Source="{Binding Pic0.Icon}" Width="310" Height="180" Margin="160,84,0,0">
                                <Image.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Load Information" Click="LoadResource_OnClick"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsRemoveEnabled}" Header="Clear Information" Click="Resource_OnRemove"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsSaveAsEnabled}" Header="Save Information As..." Click="SaveResource_OnClick"></MenuItem>
                                    </ContextMenu>
                                </Image.ContextMenu>
                            </Image>
                            <Border Tag="{Binding Icon0}" AllowDrop="True" Drop="Icon0_OnDrop" Visibility="{Binding ShowIcon, Converter={StaticResource VisibilityConverter}}" CornerRadius="8" Height="80" Width="80" Margin="-280,0,0,0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" ShadowDepth="1" Opacity="1"/>
                                </Border.Effect>
                                <Border.ContextMenu>
                                    <ContextMenu DataContext="{Binding PlacementTarget.Tag, RelativeSource={RelativeSource Self}}">
                                        <MenuItem Header="Load Icon" Click="LoadResource_OnClick"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsRemoveEnabled}" Header="Clear Icon" Click="Resource_OnRemove"></MenuItem>
                                        <MenuItem IsEnabled="{Binding IsSaveAsEnabled}" Header="Save Icon As..." Click="SaveResource_OnClick"></MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>
                                <Image Source="{Binding Icon0.Icon}" Height="80" Width="80"></Image>
                            </Border>
                        </Grid>
                        <Grid  Grid.Row="2" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                            <Label>Drag and drop images onto the resource areas to load into the resource. Right-click to show context menu.</Label>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="PARAM.SFO">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" >
                            <ItemsControl ItemsSource="{Binding SFOEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Height="35">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding Key}"></TextBlock>
                                            <TextBox IsEnabled="{Binding IsEditable}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="5,5,5,5" Text="{Binding Value}"></TextBox>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <Button Grid.Row="1" Click="ResetSFO_Click">Reset</Button>
                    </Grid>
                </TabItem>
            </TabControl>


        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <ProgressBar Maximum="{Binding MaxProgress}" Value="{Binding Progress}" Margin="2,5,5,5"></ProgressBar>
            <Label Content="{Binding Status}"  Margin="2,2,2,2"></Label>
            <Button Grid.Column="1" Click="Cancel_Click">Cancel</Button>
        </Grid>
    </Grid>
</Page>
